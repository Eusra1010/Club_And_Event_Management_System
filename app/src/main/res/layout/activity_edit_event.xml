<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true"
    android:background="@drawable/all_background">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center"
        android:padding="24dp">

        <LinearLayout
            android:layout_width="330dp"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="20dp"
            android:background="@drawable/bg_edit_event_card">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Edit Event"
                android:textSize="22sp"
                android:textStyle="bold"
                android:textColor="@android:color/white"
                android:layout_gravity="center"
                android:layout_marginBottom="20dp"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Event Name"
                android:textStyle="bold"
                android:textColor="@android:color/white"/>

            <EditText
                android:id="@+id/etEventName"
                android:layout_width="match_parent"
                android:layout_height="48dp"
                android:enabled="false"
                android:focusable="false"
                android:clickable="false"
                android:hint="Event name cannot be changed"
                android:textColor="@android:color/white"
                android:textColorHint="#CCFFFFFF"
                android:background="@android:color/transparent"/>

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="#80FFFFFF"
                android:layout_marginBottom="16dp"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Event Date"
                android:textStyle="bold"
                android:textColor="@android:color/white"/>

            <EditText
                android:id="@+id/etEventDate"
                android:layout_width="match_parent"
                android:layout_height="48dp"
                android:hint="Select event date"
                android:focusable="false"
                android:clickable="true"
                android:inputType="none"
                android:textColor="@android:color/white"
                android:textColorHint="#CCFFFFFF"
                android:background="@android:color/transparent"/>

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="#80FFFFFF"
                android:layout_marginBottom="16dp"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Venue"
                android:textStyle="bold"
                android:textColor="@android:color/white"/>

            <EditText
                android:id="@+id/etVenue"
                android:layout_width="match_parent"
                android:layout_height="48dp"
                android:hint="Enter venue"
                android:inputType="textPostalAddress"
                android:textColor="@android:color/white"
                android:textColorHint="#CCFFFFFF"
                android:background="@android:color/transparent"/>

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="#80FFFFFF"
                android:layout_marginBottom="16dp"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Fees"
                android:textStyle="bold"
                android:textColor="@android:color/white"/>

            <EditText
                android:id="@+id/etFees"
                android:layout_width="match_parent"
                android:layout_height="48dp"
                android:hint="Enter fee (0 = Free)"
                android:inputType="number"
                android:textColor="@android:color/white"
                android:textColorHint="#CCFFFFFF"
                android:background="@android:color/transparent"/>

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="#80FFFFFF"
                android:layout_marginBottom="16dp"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Registration Deadline"
                android:textStyle="bold"
                android:textColor="@android:color/white"/>

            <EditText
                android:id="@+id/etDeadline"
                android:layout_width="match_parent"
                android:layout_height="48dp"
                android:hint="Select registration deadline"
                android:focusable="false"
                android:clickable="true"
                android:inputType="none"
                android:textColor="@android:color/white"
                android:textColorHint="#CCFFFFFF"
                android:background="@android:color/transparent"/>

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="#80FFFFFF"
                android:layout_marginBottom="16dp"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Registration Status"
                android:textStyle="bold"
                android:textColor="@android:color/white"/>

            <com.google.android.material.switchmaterial.SwitchMaterial
                android:id="@+id/switchRegistration"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Registration Open"
                android:textColor="@android:color/white"/>

            <TextView
                android:id="@+id/tvRegistrationHint"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Registration is disabled because this event is cancelled"
                android:textSize="12sp"
                android:textColor="#FFCDD2"
                android:visibility="gone"
                android:layout_marginTop="4dp"/>

            <Button
                android:id="@+id/btnSaveChanges"
                android:layout_width="match_parent"
                android:layout_height="48dp"
                android:text="Save Changes"
                android:textSize="16sp"
                android:textColor="#042A36"
                android:backgroundTint="@android:color/white"
                android:layout_marginTop="20dp"/>

        </LinearLayout>
    </LinearLayout>
</ScrollView>
