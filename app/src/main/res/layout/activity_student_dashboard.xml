<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg_dashboard_gradient">


    <TextView
        android:id="@+id/dashboardTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="56dp"
        android:text="Student Dashboard"
        android:textColor="#080F0F"
        android:textSize="24sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.497"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <GridLayout
        android:id="@+id/studentGrid"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_margin="20dp"
        android:columnCount="2"
        android:rowCount="2"
        app:layout_constraintTop_toBottomOf="@id/dashboardTitle"
        app:layout_constraintBottom_toTopOf="@id/btnStudentLogout"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <LinearLayout
            android:id="@+id/cardViewEvents"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_columnWeight="1"
            android:layout_rowWeight="1"
            android:layout_margin="12dp"
            android:background="@drawable/dashboard_card"
            android:gravity="center"
            android:orientation="vertical"
            android:clickable="true"
            android:focusable="true">
            <ImageView
                android:id="@+id/imageView10"
                android:layout_width="96dp"
                android:layout_height="100dp"
                app:srcCompat="@drawable/view" />

            <TextView
                android:layout_width="12dp"
                android:layout_height="5dp"
                android:textSize="34sp"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="33dp"
                android:text="View Events"
                android:textSize="15sp"
                android:textColor="#1E3C72"
                android:layout_marginTop="10dp"/>
        </LinearLayout>

        <LinearLayout
            android:id="@+id/cardRegisterEvent"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_columnWeight="1"
            android:layout_rowWeight="1"
            android:layout_margin="12dp"
            android:background="@drawable/dashboard_card"
            android:gravity="center"
            android:orientation="vertical"
            android:clickable="true"
            android:focusable="true">
            <ImageView
                android:id="@+id/imageView12"
                android:layout_width="96dp"
                android:layout_height="100dp"
                app:srcCompat="@drawable/register" />

            <TextView
                android:layout_width="12dp"
                android:layout_height="5dp"
                android:textSize="34sp"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="33dp"
                android:text="Register Event"
                android:textSize="15sp"
                android:textColor="#1E3C72"
                android:layout_marginTop="10dp"/>
        </LinearLayout>

        <LinearLayout
            android:id="@+id/cardMyBookings"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_columnWeight="1"
            android:layout_rowWeight="1"
            android:layout_margin="12dp"
            android:background="@drawable/dashboard_card"
            android:gravity="center"
            android:orientation="vertical"
            android:clickable="true"
            android:focusable="true">
            <ImageView
                android:id="@+id/imageView11"
                android:layout_width="96dp"
                android:layout_height="100dp"
                app:srcCompat="@drawable/my_reg" />

            <TextView
                android:layout_width="12dp"
                android:layout_height="5dp"
                android:textSize="34sp"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="33dp"
                android:text="My Registration"
                android:textSize="15sp"
                android:textColor="#1E3C72"
                android:layout_marginTop="10dp"/>
        </LinearLayout>

        <LinearLayout
            android:id="@+id/cardAnnouncements"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_columnWeight="1"
            android:layout_rowWeight="1"
            android:layout_margin="12dp"
            android:background="@drawable/dashboard_card"
            android:gravity="center"
            android:orientation="vertical"
            android:clickable="true"
            android:focusable="true">
            <ImageView
                android:id="@+id/imageView13"
                android:layout_width="96dp"
                android:layout_height="100dp"
                app:srcCompat="@drawable/announcement" />

            <TextView
                android:layout_width="12dp"
                android:layout_height="5dp"
                android:textSize="34sp"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="33dp"
                android:text="Announcements"
                android:textSize="15sp"
                android:textColor="#1E3C72"
                android:layout_marginTop="10dp"/>
        </LinearLayout>

    </GridLayout>

    <Button
        android:id="@+id/btnStudentLogout"
        android:layout_width="0dp"
        android:layout_height="50dp"
        android:text="Logout"
        android:textSize="16sp"
        android:textColor="#FFFFFF"
        android:backgroundTint="#D32F2F"
        android:layout_margin="16dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

</androidx.constraintlayout.widget.ConstraintLayout>
