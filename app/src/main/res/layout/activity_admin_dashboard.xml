<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/all_background">


    <TextView
        android:id="@+id/adminDashboardTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Admin Dashboard"
        android:textSize="24sp"
        android:textStyle="bold"
        android:textColor="#0A2540"
        android:layout_marginTop="24dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />


    <GridLayout
        android:id="@+id/adminGrid"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_margin="20dp"
        android:columnCount="2"
        android:rowCount="3"
        app:layout_constraintBottom_toTopOf="@id/btnAdminLogout"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/adminDashboardTitle">


        <LinearLayout
            android:id="@+id/cardCreateEvent"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_rowWeight="1"
            android:layout_columnWeight="1"
            android:layout_margin="12dp"
            android:background="@drawable/dashboard_card"
            android:clickable="true"
            android:focusable="true"
            android:gravity="center"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/imageView9"
                android:layout_width="96dp"
                android:layout_height="100dp"
                app:srcCompat="@drawable/plus" />


            <TextView
                android:layout_width="12dp"
                android:layout_height="5dp"
                android:textSize="34sp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="33dp"
                android:layout_marginTop="10dp"
                android:text="Create Event"
                android:textColor="#1E3C72"
                android:textSize="15sp" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/cardManageEvents"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_rowWeight="1"
            android:layout_columnWeight="1"
            android:layout_margin="12dp"
            android:background="@drawable/dashboard_card"
            android:clickable="true"
            android:focusable="true"
            android:gravity="center"
            android:orientation="vertical">
            <ImageView
                android:id="@+id/imageView8"
                android:layout_width="96dp"
                android:layout_height="100dp"
                app:srcCompat="@drawable/manage" />


            <TextView
                android:layout_width="12dp"
                android:layout_height="5dp"
                android:textSize="34sp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="33dp"
                android:layout_marginTop="10dp"
                android:text="Manage Events"
                android:textColor="#1E3C72"
                android:textSize="15sp" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/cardViewRegistrations"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_rowWeight="1"
            android:layout_columnWeight="1"
            android:layout_margin="12dp"
            android:background="@drawable/dashboard_card"
            android:clickable="true"
            android:focusable="true"
            android:gravity="center"
            android:orientation="vertical">


            <ImageView
                android:id="@+id/imageView7"
                android:layout_width="96dp"
                android:layout_height="100dp"
                app:srcCompat="@drawable/view" />

            <TextView
                android:layout_width="12dp"
                android:layout_height="5dp"
                android:textSize="34sp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="33dp"
                android:layout_marginTop="10dp"
                android:text="View Registrations"
                android:textColor="#1E3C72"
                android:textSize="15sp" />
        </LinearLayout>


        <LinearLayout
            android:id="@+id/cardAdminAnnouncements"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_rowWeight="1"
            android:layout_columnWeight="1"
            android:layout_margin="12dp"
            android:background="@drawable/dashboard_card"
            android:clickable="true"
            android:focusable="true"
            android:gravity="center"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/imageView3"
                android:layout_width="96dp"
                android:layout_height="100dp"
                app:srcCompat="@drawable/announcement" />

            <TextView
                android:layout_width="12dp"
                android:layout_height="5dp"
                android:textSize="34sp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="33dp"
                android:layout_marginTop="10dp"
                android:text="Announcements"
                android:textColor="#1E3C72"
                android:textSize="15sp" />
        </LinearLayout>

    </GridLayout>

    <Button
        android:id="@+id/btnAdminLogout"
        android:layout_width="0dp"
        android:layout_height="50dp"
        android:layout_margin="20dp"
        android:text="Logout"
        android:textColor="#FFFFFF"
        android:textSize="16sp"
        android:backgroundTint="#FF1744"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>
